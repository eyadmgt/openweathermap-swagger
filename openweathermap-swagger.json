{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "OpenWeatherMap API"
  },
  "host": "api.openweathermap.org",
  "basePath": "/data/2.5",
  "schemes": ["http"],
  "paths": {
    "/weather": {
      "get": {
        "summary": "Get current weather",
        "parameters": [
          {
            "name": "lat",
            "in": "query",
            "required": true,
            "type": "number",
            "format": "float"
          },
          {
            "name": "lon",
            "in": "query",
            "required": true,
            "type": "number",
            "format": "float"
          },
          {
            "name": "appid",
            "in": "query",
            "required": true,
            "type": "string"
          }
        ]
        ,
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  }
}

